@model List<ContatoModel>
@{
    ViewData["Title"] = "Listagem de Contatos";
}

<div class="text-center">
    <h1>Listagem de Contatos</h1>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Nome</th>
                <th scope="col">E-mail</th>
                <th scope="col">
                <a role="button" class="btn btn-success" asp-controller="Contato" asp-action="Adicionar">Add</a>
                </th>
            </tr>
        </thead>
        <tbody><!--Listar contatos SE existir-->
            @if (Model != null && Model.Any())
            {
                foreach (ContatoModel contato in Model)
                {
                    <tr>
                        <th scope="row">@contato.Id</th>
                        <td>@contato.Nome</td>
                        <td>@contato.Email</td>
                        <td>
                            <div class="btn-group" role="group" aria-label="Basic mixed styles example">
                                <a role="button" class="btn btn-warning" asp-controller="Contato" asp-action="Editar">Edite</a>
                                <a role="button" class="btn btn-danger" asp-controller="Contato" asp-action="DeletarConfirmacao">Delete</a>
                            </div>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>


